 <div class="projects-container">
  <div class="row d-flex justify-content-around">
    <%= @projects.each do |project| %>
      <div class="col-lg-4 col-sm-6">
        <div class="card-1">
          <%= cl_image_tag project.project_image, style:" width: 100%; height: 100%; object-fit: cover;  opacity: 0.5; border-radius: 10px; filter: blur(1px) "%>
          <h1><%=project.name%></h1>
          <h3><%=link_to "SEE WEBSITE", "https://www.poner.io/", :target => "_blank" %></h3>
          <p class="project-description"><%=project.description%></p>
          <div class="bubles">
            <p class="project-type"><%= "project type"%></p>
            <p class="project-used_techno"><%="used_techno"%></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
